<% if (message) {%>
<div class="alert alert-dismissable fade show alert-<%= message.type%>" role="alert">
<button class="btn-close" type="button" data-dbs-dismiss="alert" aria-level="Close"></button>
<strong><<% message.message %></strong>
<%} %>
<table class="table">
  <% if(users!=""){ %>
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">image</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Action</th>
  
  
      </tr>
    </thead>
    <tbody>
     <% users.forEach((row, index) => {%>
      <tr class="align-middle">
        <th scope="row"><%= index %></th>
        <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
        <td><%= row.name %></td>
        <td><%= row.email %></td>
        <td><%= row.phone %></td>
        <td>
          <a href="/edit/<%= row._id %>" class="text-success">
            <i class="fas fa-edit fa-lg mx-1"></i>
          </a>
          <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
        </td>
  
      </tr>
     <%}); %>
      
    </tbody>
    <% } else{%>
      <h1 class="text-centre text-secondary mt-5">No useres found in database!</h1>
    <% } %>
  
</table>


